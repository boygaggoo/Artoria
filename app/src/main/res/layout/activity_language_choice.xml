<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".LanguageChoice"
        >

        <ImageView
            android:id="@+id/bg"
            android:src="@drawable/bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop">
        </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/string_welcome"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="to the"
        android:id="@+id/to"
        android:textColor="@color/white"
        android:layout_below="@+id/string_welcome"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Belfry"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/string_belfry"
        android:layout_below="@+id/to"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/draakske"
        android:src="@drawable/ic_draak_white_big"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:layout_below="@+id/string_belfry"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lang_choice"
            android:textColor="@color/color2"
            android:id="@+id/string_choose_language"
            android:layout_above="@+id/top_row"
            android:paddingBottom="1dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/down_button"
            android:src="@drawable/ic_down_arrow"
            android:layout_toRightOf="@+id/string_choose_language"
            android:layout_toEndOf="@+id/string_choose_language"
            android:layout_alignBottom="@+id/string_choose_language"
            android:onClick="scrollDown"
            />

    <!-- Start of flag layout -->
    <!-- Bottom row, DE in the middle-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lang_de"
            android:id="@+id/german"
            android:background="@null"
            android:onClick="langSelected"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/bg"
            android:paddingBottom="@dimen/activity_vertical_margin"
            />

    <!-- Second row SP IT RU -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/bottom_row"
        android:layout_above="@+id/german"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lang_es"
            android:background="@null"
            android:id="@+id/spanish"
            android:onClick="langSelected"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lang_it"
            android:background="@null"
            android:id="@+id/italian"
            android:onClick="langSelected"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lang_ru"
            android:background="@null"
            android:id="@+id/russian"
            android:onClick="langSelected"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Top row, NL FR EN-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/top_row"
        android:layout_above="@id/bottom_row"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lang_nl"
            android:id="@+id/dutch"
            android:background="@null"
            android:onClick="langSelected"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lang_fr"
            android:id="@+id/french"
            android:background="@null"
            android:onClick="langSelected"
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lang_en"
            android:background="@null"
            android:id="@+id/english"
            android:onClick="langSelected"
            android:layout_weight="1"
           />

    </LinearLayout>

</RelativeLayout>


    </ScrollView>