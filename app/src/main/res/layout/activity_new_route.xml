<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.artoria.belfortapp.activities.RouteActivity"
    android:orientation="vertical"
    android:weightSum="2">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="be.artoria.belfortapp.fragments.MapFragment"
        class="be.artoria.belfortapp.fragments.MapFragment"
        android:id="@+id/container"
        tools:layout="@layout/fragment_map" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cntNoRoute"
        android:weightSum="2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="panorama"
            android:layout_weight="1"
            android:id="@+id/btnPanorama"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Buildings"
            android:layout_weight="1"
            android:id="@+id/btnBuildings"/>

    </LinearLayout>


    <com.mobeta.android.dslv.DragSortListView
        android:id="@+id/lstRoute"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fastScrollEnabled="true"
        dslv:drag_handle_id="@+id/drag_handle"
        dslv:remove_enabled="true"
        dslv:remove_mode="flingRemove"
        dslv:drag_start_mode="onMove"/>
    </LinearLayout>
</LinearLayout>
